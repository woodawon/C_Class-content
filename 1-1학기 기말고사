#include <stdio.h> // ++A 와 A++ 차이

main() {
	
	int a,b,hap;
	a = b = 10;
	hap = ++a + b--; // --b로 한다면 -가 적용되어 hap이 20이 되지만, b 뒤에 --를 넣으면 적용되지 않아 11 + 10 = 21로 hap이 출력됨.
	printf("hap = %d\n",hap);
	printf("a = %d b = %d",a,b);
	
} 

#include <stdio.h> // 3 ~ 12까지 수들 차례로 더한 값 출력

main() {
	int a= 3,b = 12,s = 0;
	while(b >= a){
		s += a;
		a += 1;
	}
	printf("s = %2d\n",s);
	printf("a = %2d\n",a);
}

#include <stdio.h> // 0 + 3 + 15 + 42 = 60 = d

main() {
	int k,s,a = 0,b = 0,d = 0;
	for(k = 1;k <= 3;k++) {
		for(s = 1;s <= 3;s++) {
			a = k * k;
			b += a;
		}
		d += b;
	}
	printf("%d\n",d);
	printf("%d",a);
}

#include <stdio.h> // 2나 3의 배수일 경우에만 더한 값 출력

main() {
	int a, su1 = 0,su2 = 0;
	for(a = 1;a <= 14;a++){
		if(a % 2 == 0)
			su1 += a;
		else if(a % 3 == 0)
			su2 += a;
	}
	printf("%3d %3d",su1, su2);
}

#include <stdio.h> // 1~15까지의 숫자들 중 3의 배수일 경우에만 더한 값 출력

main() {
	int k = 1,n, sum = 0,cnt = 0;
	while(k <= 15){
		n = k - (k / 3) * 3;
		if(n == 0){
			sum += k;
			cnt += 1;
		}
		k += 1;
	}
	printf("%d\n",cnt);
	printf("%d",sum);
}

#include <stdio.h> // 1~10까지 수 더한 값 

main() {
	int n1 = 10,n2 = 1,sum = 0,tmp;
	if(n1 > n2){
		tmp = n1;
		n1 = n2;
		n2 = tmp;
	}
	for(n1 = n1;n1 <= n2;n1++){
		sum += n1;
	}
	printf("%d",sum);
}
