#include <stdio.h> 

main() {
	
	int k = 1, n, sum = 0, cnt = 0;
	while(k <= 20) {
		n = k - (k / 4) * 4; // n = 1,2,3, n = 4 - 4 = 0 n = 8 - 8 = 0, k = 12, 16, 20
		if(n == 0) {
			sum += k; // sum = 4 + 8 + 12 + 16 + 20 = 60
			cnt += 1; // cnt = 1 + 1 + 1 + 1 + 1 = 5
		}
		k += 1;
	}
	printf("cnt = %d, sum = %d", cnt, sum);
	
}
