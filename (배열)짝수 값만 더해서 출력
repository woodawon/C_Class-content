#include <stdio.h>

main() {
	
	int a, sum = 0;
	int num[5] = {2, 5, 7, 8, 6};
	
	for(a = 0;a <= 4;a++) {
		if(num[a] % 2 == 0)
			sum += num[a];
	printf("%3d\n", sum);
	}
	
}
//0 1 2 3 4
//2 5 7 8 6
//
//a = 0, sum = 2 
//a = 1, sum = 2
//a = 2, sum = 2
//a = 3, sum = 2 + 8 = 10
//a = 4, sum = 2 + 8 + 6 = 16
//a = 5 - 나감!
